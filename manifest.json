{
  "manifest_version": 3,
  "name": "YT Video Enlarger",
  "version": "1.0",
  "description": "Allows you to resize the YouTube video window while not in full-screen mode.",
  "permissions": [
    "activeTab",
    "scripting",
    "webNavigation",
    "tabs"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon.png"
  }
}