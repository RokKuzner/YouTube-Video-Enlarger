{
  "manifest_version": 3,
  "name": "YT Video Enlarger",
  "version": "1.0",
  "description": "Allows you to resize the YouTube video window while not in full-screen mode.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["styles.css"],
      "js": ["script.js"]
    }
  ],
  "icons": {
      "128": "icon.png"
  }
}